FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional dependencies for local API server
RUN pip install fastapi uvicorn boto3-stubs[dynamodb,lambda,apigateway]

# Copy application code
COPY . .

# Create local API server script
COPY local_dev/local_api_server.py /app/local_api_server.py

# Expose port
EXPOSE 8080

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Run the local API server
CMD ["uvicorn", "local_api_server:app", "--host", "0.0.0.0", "--port", "8080", "--reload"]
